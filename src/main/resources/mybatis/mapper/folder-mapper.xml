<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.BookHub.Folder.StorageRepository">

    <!---->
    <select id="selectFolder" parameterType="int" resultType="folderdto">
        SELECT * FROM folder WHERE id = #{seq}
    </select>

    <!-- 폴더 목록 조회 -->
    <select id="selectFolderList" resultType="folderdto" parameterType="int">
        SELECT name FROM folder WHERE user_id = #{user_id}
    </select>

    <!-- 폴더 이름 수정 -->
    <update id="updateFolderName" parameterType="folderdto">
        UPDATE folder SET name = #{name} WHERE id = #{seq}
    </update>

    <!-- 폴더 삭제 -->
    <delete id="deleteFolder" parameterType="int">
        DELETE FROM folder WHERE id = #{seq}
    </delete>

    <insert id="createFolder" useGeneratedKeys="true" keyProperty="id" parameterType="folderdto">
        INSERT INTO folder (user_id, name) VALUES (#{user_id}, #{name})
    </insert>

</mapper>
