<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.BookHub.Docs.DocsRepository">

    <!-- 문서 저장 -->
    <insert id="insertDocs" useGeneratedKeys="true" keyProperty="id" parameterType="docsdto">
        INSERT INTO document (folder_id, title, memo, url, save_at)
        VALUES (#{folder_id}, #{title}, #{memo}, #{url}, NOW())
    </insert>

    <!-- 문서 리스트 조회 & 검색 -->
    <select id="selectDocList" resultType="docsdto">
        SELECT * FROM document
        <where>
            <if test="folder_id != null">
                folder_id = #{folder_id}
            </if>
            <if test="title != null">
                AND title like #{title}
            </if>
        </where>
    </select>

    <!-- 문서 조회 -->
    <select id="selectDoc" resultType="docsdto" parameterType="int">
        SELECT title, memo, url, save_at FROM document WHERE id = #{id}
    </select>

    <!-- 문서 단일 삭제 -->
    <delete id="deleteDoc" parameterType="int">
        DELETE FROM document WHERE id = #{id}
    </delete>

    <!-- 폴더 하위 문서 모두 삭제 -->
    <delete id="deleteDocs" parameterType="int">
        DELETE FROM document WHERE folder = #{folder_id}
    </delete>
</mapper>
